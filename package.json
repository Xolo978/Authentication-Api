{
  "name": "auth-api",
  "module": "server/index.ts",
  "type": "module",
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/node": "^7.25.0",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-typescript": "^7.24.7",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.11",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "chokidar": "^3.6.0",
    "glob": "^11.0.0"
  },
