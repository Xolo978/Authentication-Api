{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": false,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
